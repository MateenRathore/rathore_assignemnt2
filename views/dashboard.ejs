                </div>
            </section>
        <% } else if(role === 3 || role === 4 ){ %>
            <section class="physician-content">
                <div class="row">
                    <div>
                        <div class="row">
                            <a class="datafiles" href="https://drive.google.com/file/d/1Wu9ghFbAjTvs4UrsoyPnZbdR5Mbbor4K/view?usp=sharing" target="blank"> <i class="fa fa-file-excel-o fa-4x" aria-hidden="true"></i> Data 1 file</a>
